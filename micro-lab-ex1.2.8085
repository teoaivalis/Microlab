START:
IN 10H             ; йяатаы амоивта ломо та 0900-0902
LXI H,0903H        ; йаи ста упокоипа бафы лгдем 
MVI M,10H          ;	та 3 пяыта йахояифомтаи апо том упокоипо йыдийа
INX H		     ;
MVI M,10H          ;		
INX H              ;		
MVI M,10H	     ;	 
INX H              ;		
MVI M,10H	     ;


READX:
CALL KIND          ; вягсг тгс KIND циа диабасла тоу 1ОУ аяихлоу
MOV B,A            ; топохетгсг стом б

READY:
CALL KIND          ; вягсг тгс KIND циа диабасла тоу 2ОУ аяихлоу
MOV C,A            ; топохетгсг стом C


MOV A,B            ; бафы том б ста а ысте ма йамы тгм окисхгсг
RLC
RLC
RLC
RLC                ; жтиавмы TO 16в 
ADD C              ; 16в+у

MVI C,FFH          ; бафы стом C  то 1111 1111 ысте ле аунгсг лета ма цимеи 0
                   ; йаи ма то евы циа летягтг тым ейатомтадым



HUNDREDS:
INR C              ; аунамы TON C == 0
SUI 64H            ; ажаияы 100
JNC HUNDREDS       ; ам лпояы сумевифы ма ажаияы
ADI 64H            ; аккиыс диояхымы йаи пяосхеты 100
LXI H,0902H        ; апохгйеуы стгм хесг 0902 тис ейатомтадес (3Г хесг апо та дениа)
MOV M,C            ; 
MVI C,FFH          ; бафы паки стом C  то 1111 1111 ысте ле аунгсг лета ма цимеи 0
                   ; йаи ма то евы циа летягтг тым дейадым тыяа

DECAS:
INR C              ; аунамы TON C == 0 
SUI 0AH            ; ажаияы 10
JNC DECAS          ; ам лпояы сумевифы ма ажаияы
ADI 0AH            ; аккиыс диояхымы йаи пяосхеты 10
LXI H,0901H        ; апохгйеуы стгм хесг 0901 тис дейадес (2Г хесг)
MOV M,C            ;
MVI C,FFH          ; бафы паки стом C  то 1111 1111 ысте ле аунгсг лета ма цимеи 0
                   ; йаи ма то евы циа летягтг тым ломадым тыяа


UNITS:
LXI H,0900H        ; паиямы тгм хесг 0900 циа ломадес
MOV M,A            ; йаи бафы ейеи тис ломадес



отгоми:
LXI D,0900H	     ; бафы стом йатавыягтг D-E то пеяиеволемо тгс 0900
CALL STDM	     ; йакоуле тгм STDM ысте ма лпояесеи г DCD 
                   ; ма бяеи та дедолема стис амалемолемес циа аутгм хесеис

OUTPUT:
CALL DCD           ; йкгсг тгс DCD  циа елжамгсг стис 3-дениотеяес  
                   ; хесеис тоу DISPLAY  тоу апотекеслатос
JMP START          ; вягсг циа сумевг кеитоуяциа

END 	




