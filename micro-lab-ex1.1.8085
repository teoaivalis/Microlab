LXI B,03E8H                 ; 03E8(HEX) = 1000(DEC) вягсг циа тгм йахустеягсг
MVI D,0FH                   ; D = 1111 1111 ысте ле аунгсг ма паеи сто 0000 0000



START:

LDA 2000H                   ; диабафы тгм еисодо
ANI 0FH                     ; аполомымы та 4 LSB
JZ START                    ; ам еимаи 0 паы паки стгм аявг 
                            ; йаи пеяилемы аккацг

MOV E,A			 ; то е евеи то амы ояио тоу вяомолетяоу 
MOV D,E                     ; то D евеи то амы ояио тоу вяомолетяоу 

CMA                         ; йамы тгм амтистяожг
STA 3000H                   ; елжамифы то апотекесла
CMA                         ; йамы паки тгм амтистяожг
CALL DELB                   ; ежаялофы тгм йахустеягсг

COUNT_DOWN:

LDA 2000H                   ; диабафы паки тгм еисодо
ANI 80H                     ; аполомымы то MSB
JZ COUNT_DOWN               ; ам еимаи 0 йоккаеи йаи пеяилемы
                            ; левяи ма цимеи 1

MOV A,D                     ; леиымы то вяомолетяо D
DCR A                       ; ле емдиалесо йатавыягтг том A
MOV D,A
CMA                         ; йамы то сулпкгяыла
STA 3000H                   ; елжамифы то апотекесла
CMA                         ; йамы паки тгм амтистяожг
CALL DELB                   ; йакы тгм сумаятгсг циа ма ежаялосы тгм йахустеягсг (1 sec)
CPI 00H                     ; ажаияы апо том A (вяомолетяо) то 0
JNZ COUNT_DOWN              ; ам дем еимаи лгдем сумевифы ма леиымы


COUNT_UP:

LDA 2000H                   ; диабафы паки тгм еисодо
ANI 80H                     ; аполомымы то MSB
JZ COUNT_UP                 ; ам еимаи 0 йоккаеи йаи пеяилемы 
                            ; левяи ма цимеи 1

MOV A,D                     ; аунамы то вяомолетяо D 
INR A                       ; ле емдиалесо йатавыягтг том A 
MOV D,A
CMA                         ; йамы то сулпкгяыла
STA 3000H                   ; елжамифы то апотекесла
CMA                         ; йамы паки тгм амтистяожг
CALL DELB                   ; йакы тгм сумаятгсг циа ма ежаялосы тгм йахустеягсг (1 sec)
CMP E                       ; то суцйяимы ле то амытеяо ояио
JNZ COUNT_UP                ; ам дем евеи жтасеи сумевифы ма аунамы том летягтг
JMP START                   ; ам ежтаса сто лгдем паы стгм аявг
                            ; йаи пеяилемы то мео амы ояио






END
